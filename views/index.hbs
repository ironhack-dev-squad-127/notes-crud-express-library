 <div class="page-index">
  <h1>The books</h1>
  <ul>
  {{#each books}}
    <li><a href="/books/{{this._id}}">{{this.title}}</a></li>
  {{/each}}
  </ul>

  <h1>The editors</h1>
  <ul>
  {{#each editors}}
    <li><a href="/editors/{{this._id}}">{{this.name}}</a></li>
  {{/each}}
  </ul>

  {{!-- Display the message if we have one --}}
  {{#if message}}
    <div class="alert alert-primary">{{message}}</div>
  {{/if}}
</div>
